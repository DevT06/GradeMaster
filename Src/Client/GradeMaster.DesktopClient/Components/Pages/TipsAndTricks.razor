                    <tr><td>Home</td><td><kbd>CTRL</kbd> + <kbd>E</kbd></td><td>Navigates to create Education page</td></tr>
                    <tr><td>Home</td><td><kbd>CTRL</kbd> + <kbd>S</kbd></td><td>Navigates to create Subject page</td></tr>
                    <tr><td>Home</td><td><kbd>CTRL</kbd> + <kbd>G</kbd></td><td>Navigates to create Grade page</td></tr>
