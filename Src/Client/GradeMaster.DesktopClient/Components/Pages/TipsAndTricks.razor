                    <tr><td>All Pages</td><td><kbd>CTRL</kbd> + <kbd>O</kbd></td><td>Opens or Closes the Offcanvas</td></tr>
                    <tr><td>All Pages</td><td><kbd>CTRL</kbd> + <kbd>T</kbd></td><td>Scrolls to the top of the page</td></tr>
                    <tr><td>All Pages</td><td><kbd>CTRL</kbd> + <kbd>ALT</kbd> + <kbd>H</kbd></td><td>Navigates to the Home page</td></tr>
                    <tr><td>All Pages</td><td><kbd>CTRL</kbd> + <kbd>ALT</kbd> + <kbd>E</kbd></td><td>Navigates to the Educations page</td></tr>
                    <tr><td>All Pages</td><td><kbd>CTRL</kbd> + <kbd>ALT</kbd> + <kbd>S</kbd></td><td>Navigates to the Subjects page</td></tr>
                    <tr><td>All Pages</td><td><kbd>CTRL</kbd> + <kbd>ALT</kbd> + <kbd>G</kbd></td><td>Navigates to the Grades page</td></tr>
                    <tr><td>All Pages</td><td><kbd>CTRL</kbd> + <kbd>ALT</kbd> + <kbd>Q</kbd></td><td>Navigates to the Settings page</td></tr>

                    <tr class="table-active"><td></td><td></td><td></td></tr>

