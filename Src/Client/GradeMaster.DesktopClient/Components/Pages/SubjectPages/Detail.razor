@page "/subjects/{Id:int}"

<TopPageHeader Style="font-size: 28px; top: 10px">Detail Subject</TopPageHeader>

<div class="border-top" style="width: 100%; max-width: 1008px; margin-top: 15px"></div>

<div class="col-12 col-md-12 py-3 px-2" style="max-width: 1100px;">
    <h2 style="margin-bottom: 6px;">
        <b class="enabled-text-selection">@Subject.Name - @Subject.Semester</b>
    </h2>
    @* <CardSubTitle Style="margin-top: 6px;">@Subject.Education.Name | @Subject.Education.StartDate.Year - @Subject.Education.EndDate.Year</CardSubTitle> *@
    @* <span style="display: inline-flex;">
        <CardSubTitle Style="margin-top: 6px;">
            @Subject.Education.Name | @Subject.Education.StartDate.Year - @Subject.Education.EndDate.Year</CardSubTitle>
        <Button class="btn btn-translucient" style="padding: 5px;padding-top: 0;padding-bottom: 1px;margin-top: 2px;"><Icon Name="IconName.ArrowUpRightCircle"/></Button>
    </span> *@
    <Button @onclick="GoToEducation" class="btn-translucient-v2 border-0" style="margin-left: -6px; padding: 5px; padding-left: 6px; padding-right: 6px;"><CardSubTitle Class="enabled-text-selection">@Subject.Education.Name, @Subject.Education.StartDate.Year - @Subject.Education.EndDate.Year <Icon Name="IconName.ArrowUpRightCircle" /></CardSubTitle></Button>
    <Badge VisuallyHiddenText="Completion State" Style="padding: .25rem !important; margin-bottom: -1px;" Color="Subject.Education.Completed ? BadgeColor.Success : BadgeColor.Warning"></Badge>
    <CardSubTitle Class="enabled-text-selection" Style="margin-top: 2px;">@Subject.Education.Institution</CardSubTitle>
    @* <CardSubTitle Style="margin-top: 6px;">@Subject.Education.Institution</CardSubTitle> *@
</div>

<div class="py-2 px-2">
    <Card Style="max-width: 1000px">
        <CardBody>
            <CardText Class="enabled-text-selection">
                <b class="enabled-text-selection">Description:</b> <br class="enabled-text-selection" /> @DescriptionString()
            </CardText>
        </CardBody>
    </Card>
</div>
<div class="py-3 px-2" style="margin-bottom: 50px">
    <Card Style="max-width: 1000px">
        <CardBody>
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-2">
                <!-- First Column -->
                <div class="col mb-3">
                    <CardText Class="border-bottom enabled-text-selection" Style="padding-bottom: 20px; margin-bottom: 6px;">
                        <strong class="enabled-text-selection">Subject Average: </strong>
                        @if (_subjectAverage < 4 && _subjectAverage != 0)
                        {
                            <Badge Class="enabled-text-selection" Color="BadgeColor.Danger" IndicatorType="BadgeIndicatorType.RoundedPill" Style="font-size: 14px;">
                                @(_subjectAverage == 0 ? "N/A" : _subjectAverage.ToString("0.##"))
                            </Badge>
                        }
                        else
                        {
                            @(_subjectAverage == 0 ? "N/A" : _subjectAverage.ToString("0.##"))
                        }
                    </CardText>
                </div>
                <!-- Second Column -->
                <div class="col mb-3">
                    <CardText Class="border-bottom enabled-text-selection" Style="padding-bottom: 20px; margin-bottom: 6px;">
                        <b class="enabled-text-selection">Semester:</b> @Subject.Semester of @Subject.Education.Semesters
                    </CardText>
                </div>
                <div class="col mb-3">
                    <CardText Class="border-bottom enabled-text-selection" Style="padding-bottom: 20px; margin-bottom: 6px;">
                        <b class="enabled-text-selection">Completion State:</b>
                        <Badge Class="enabled-text-selection" Color="@(Subject.Completed ? BadgeColor.Success : BadgeColor.Warning)" IndicatorType="BadgeIndicatorType.RoundedPill">
                            @(Subject.Completed ? "Completed" : "In Progress")
                        </Badge>
                    </CardText>
                </div>
                <div class="col mb-3">
                    <CardText Class="border-bottom enabled-text-selection" Style="padding-bottom: 20px;">
                        <b class="enabled-text-selection">Grade Amount:</b> @Subject.Grades.Count()
                    </CardText>
                </div>
            </div>
        </CardBody>
    </Card>
</div>

<div class="border-top" style="width: 100%; max-width: 1008px; margin-top: 15px"></div>

<!-- Buttons -->
<div class="d-flex justify-content-between my-3" style="max-width: 1008px">
    <Button Color="ButtonColor.Primary" @onclick="GoBack" Size="ButtonSize.Medium">
        <Icon Name="IconName.ArrowLeft" /> Back
    </Button>
    <Button Color="ButtonColor.Success" @onclick="EditSubject" Size="ButtonSize.Medium">
        Edit <Icon Name="IconName.PencilSquare" />
    </Button>
</div>

<script>
    window.scrollTo({ top: 0, behavior: 'auto' });
</script>

